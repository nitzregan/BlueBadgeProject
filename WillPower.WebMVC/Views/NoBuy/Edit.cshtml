@model WillPower.Models.NoBuyEdit

@{
    ViewBag.Title = "Edit";
}

<div class="div1">
    <h2>Edit</h2>
</div>

<div class="mom">


    <div class="div20">


        @using (Html.BeginForm())
        {
            @Html.AntiForgeryToken()

            <div class="form-horizontal">
                @Html.ValidationSummary(true, "", new { @class = "text-danger" })
                @Html.HiddenFor(model => model.ItemID)

                <div class="form-group">
                    @*@Html.LabelFor(model => model.ItemName, htmlAttributes: new { @class = "control-label col-md-2" })*@
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.ItemName, new { htmlAttributes = new { @class = "form-control", placeholder = "Name of Item" } })
                        @Html.ValidationMessageFor(model => model.ItemName, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @*@Html.LabelFor(model => model.ItemPrice, htmlAttributes: new { @class = "control-label col-md-2" })*@
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.ItemPrice, new { htmlAttributes = new { @class = "form-control", placeholder = "Item Price" } })
                        @Html.ValidationMessageFor(model => model.ItemPrice, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @*@Html.LabelFor(model => model.ItemLocation, htmlAttributes: new { @class = "control-label col-md-2" })*@
                    <div class="col-md-10">
                        @Html.EditorFor(model => model.ItemLocation, new { htmlAttributes = new { @class = "form-control", placeholder = "Purchase Location" } })
                        @Html.ValidationMessageFor(model => model.ItemLocation, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    @*@Html.LabelFor(model => model.GoalItemID, htmlAttributes: new { @class = "control-label col-md-2" })*@
                    <div class="col-md-10">
                        @Html.DropDownList("GoalItemID", new SelectList(ViewBag.GoalItem, "GoalItemID", "GoalItemName"), null, new { @class = "form-control dropdown", placeholder = "Goal Item" })
                        @Html.ValidationMessageFor(model => model.GoalItemID, "", new { @class = "text-danger" })
                    </div>
                </div>

                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Save" class="btn btn-default" />
                    </div>
                </div>

            </div>
        }
    </div>

    <div class="div3">
        <div class="div5">
            <p>@Html.ActionLink("Details", "Details", new { id = Model.ItemID })</p>
        </div>

        <div class="div6">
            <p>@Html.ActionLink("Back to List", "Index")</p>
        </div>
    </div>


    @section Scripts {
        @Scripts.Render("~/bundles/jqueryval")
    }

</div>